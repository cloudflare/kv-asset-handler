{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "noImplicitAny": true,
    "target": "ES2020",
    "allowJs": false,
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types"],
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./test/*.ts",
    "./src/types.d.ts",
    "mime-types/src/test/mimeTypes.ts"
  ],
  "exclude": ["dist/", "./src/test", "./src/test-worker-client"]
}
